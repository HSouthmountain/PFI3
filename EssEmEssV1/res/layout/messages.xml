<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <FrameLayout android:id="@+id/frameLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/imageView1" android:background="@drawable/leather_back" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
        <TableLayout android:id="@+id/tableLayout1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="center|top">
            <TableRow android:layout_width="wrap_content" android:id="@+id/tableRow1" android:layout_height="wrap_content" android:layout_gravity="center_horizontal|top">
                <TextView android:text="Skriv meddelande:" android:layout_height="wrap_content" android:textColor="#FFD700" android:id="@+id/textViewMessage" android:layout_width="wrap_content" android:gravity="left" android:textSize="24sp"></TextView>
            </TableRow>
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tableRow2">
                <EditText android:id="@+id/editTextMessageToSend" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Ditt meddelande.."></EditText>
                <Button android:text="Send" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/buttonSend"></Button>
            </TableRow>
            <TextView android:text="Konversation:" android:layout_height="wrap_content" android:textColor="#FFD700" android:id="@+id/textViewMessage" android:layout_width="wrap_content" android:gravity="left" android:textSize="24sp"></TextView>
            <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="match_parent">
                <EditText android:text="Mottagna/skickade.." android:id="@+id/editTextMessageReceivedSent" android:layout_width="wrap_content" android:layout_gravity="fill_vertical" android:layout_height="400dip"></EditText>
                <Button android:text="Get" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/buttonGet"></Button>
            </TableRow>
        </TableLayout>
    </FrameLayout>
</LinearLayout>
